generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TimeSlot {
  id          String   @id @default(cuid())
  date        DateTime
  startTime   DateTime
  endTime     DateTime
  location    String
  description String?
  signups     SignUp[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SignUp {
  id         String   @id @default(cuid())
  name       String
  note       String?
  timeSlot   TimeSlot @relation(fields: [timeSlotId], references: [id])
  timeSlotId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
